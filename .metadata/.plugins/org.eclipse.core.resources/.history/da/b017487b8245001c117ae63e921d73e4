
import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int inteiro;
		double pontoFlutuante;
		String string;
		
		System.out.println("Digite um inteiro: %n" );
		inteiro = sc.nextInt();
		
		System.out.println("Digite um ponto flutuante: %n" );
		pontoFlutuante = sc.nextDouble();
		
		sc.nextLine();
		System.out.println("Digite uma string: %n" );
		string = sc.nextLine();
		
		System.out.printf("Inteiro: %d, Ponto flutuante: $f, String: %s", inteiro, pontoFlutuante, string);
		sc.close();
		
	}

}
