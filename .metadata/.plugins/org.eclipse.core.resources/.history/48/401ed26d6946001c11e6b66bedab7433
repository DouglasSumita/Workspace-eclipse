package entities;

public class BankAccount {
    
	public static final double TAX = 5.00; 
	private int id;
	private String name;
	private double balance;
	
	public BankAccount() {
	}

	public BankAccount(int id, String name, double initialBalance) {
		this.id = id;
		this.name = name;
		this.balance = initialBalance;
	}

	public BankAccount(int id, String name) {
		this.id = id;
		this.name = name;
	}

	public int getId() {
		return id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getBalance() {
		return balance;
	}
	
	public deposit(double value) {
		balance += value;
	}
	
	public withdraw(double value) {
		balance +=
	}
}
